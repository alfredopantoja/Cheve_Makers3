<% provide(:title, "Create brewery") %>
<h1>Create your brewery</h1>

<div class="row">
	<div class="span6 offset3">					
		<%= form_for(@user, @brewery) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.label :name %>
			<%= f.text_field :name %>			

			<%= f.label :description %>
			<%= f.text_area :description %>				

			<%= f.submit "Create brewery", class: "btn btn-large btn-primary" %>	
		<% end %>	
	</div>
</div>	
