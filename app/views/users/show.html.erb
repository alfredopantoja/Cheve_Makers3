<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>		
			<h1>
				<%= gravatar_for @user %>			
				<%= @user.name %>
			</h1>
		</section>
	</aside>	
	<div class="span8">
		<% if @user.beers.any? %>
			<h3>Beers (<%= @user.beers.count %>)</h3>
			<ol class="beers">
				<%= render @beers %>
			</ol>
			<%= will_paginate @beers %>
		<% end %>
	</div>
</div>	
